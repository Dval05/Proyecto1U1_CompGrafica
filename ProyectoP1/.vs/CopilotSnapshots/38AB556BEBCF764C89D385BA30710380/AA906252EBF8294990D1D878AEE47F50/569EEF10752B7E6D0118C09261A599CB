using System;
using System.Collections.Generic;
using System.Drawing;
using System.Drawing.Drawing2D;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace ProyectoP1
{
    internal class CGema
    {
        private float mAltura; // Altura de la gema
        private Graphics mGraph;
        private Pen mPen;
        private const float SF = 1; // Factor de escalamiento

        public CGema()
        {
            mAltura = 0.0f;
        }

        public bool ReadData(TextBox txtSide)
        {
            bool respuesta = true;
            try
            {
                mAltura = float.Parse(txtSide.Text);
                if (mAltura <= 0.0f)
                {
                    throw new Exception();
                }
            }
            catch
            {
                respuesta = false;
                MessageBox.Show("Ingrese Datos válidos...!", "ERROR!");
            }

            return respuesta;
        }

        public void InitializeData(TextBox txtSide, PictureBox picCanvas)
        {
            mAltura = 0.0f;
            txtSide.Text = "";
            txtSide.Focus();
            picCanvas.Refresh();
        }

        // PASO 1: Calcula los vértices del decágono (10 lados) exterior
        private PointF[] CalcularDecagonoExterior()
        {
            PointF[] vertices = new PointF[10];
            // El radio se calcula a partir de la altura ingresada
            float radio = mAltura / 2; 
            // Ángulo inicial para que el decágono tenga un VÉRTICE (punta) en la parte superior
            float startAngle = -90f; // -90 grados para que el vértice apunte hacia arriba

            for (int i = 0; i < 10; i++)
            {
                // Cada vértice está separado por 36 grados (360/10)
                float angle = (startAngle + i * 36f) * (float)Math.PI / 180.0f;
                vertices[i] = new PointF(
                    radio * (float)Math.Cos(angle),
                    radio * (float)Math.Sin(angle)
                );
            }

            return vertices;
        }

        // PASO 2: Calcula los vértices del decágono interno (más pequeño)
        private PointF[] CalcularDecagonoInterno()
        {
            PointF[] vertices = new PointF[10];
            // El radio interno es aproximadamente el 92% del radio exterior
            float radio = (mAltura / 2) * 0.92f; 
            // Mismo ángulo inicial para mantener la alineación
            float startAngle = -90f;

            for (int i = 0; i < 10; i++)
            {
                // Cada vértice está separado por 36 grados (360/10)
                float angle = (startAngle + i * 36f) * (float)Math.PI / 180.0f;
                vertices[i] = new PointF(
                    radio * (float)Math.Cos(angle),
                    radio * (float)Math.Sin(angle)
                );
            }

            return vertices;
        }

        // PASO 3: Dibuja líneas conectando los vértices correspondientes entre decágonos
        private void DibujarConexionesDecagonos(Graphics g, Pen pen, PointF[] decagonoExt, PointF[] decagonoInt)
        {
            // Conectar cada vértice del decágono exterior con su correspondiente en el interno
            for (int i = 0; i < 10; i++)
            {
                g.DrawLine(pen, decagonoExt[i], decagonoInt[i]);
            }
        }

        // PASO 4: Dibuja el círculo central
        private void DibujarCirculoCentral(Graphics g, Pen pen, PointF centro, CTransformation transform)
        {
            // Radio del círculo central (aproximadamente 12% de la altura total)
            float radioCentral = (mAltura / 2) * 0.12f;
            
            // Calcular el rectángulo que contiene el círculo
            RectangleF rect;
            
            if (transform == null)
            {
                // Sin transformación, el círculo está centrado en 'centro' (que ya tiene offset)
                rect = new RectangleF(
                    centro.X - radioCentral,
                    centro.Y - radioCentral,
                    radioCentral * 2,
                    radioCentral * 2
                );
            }
            else
            {
                // Con transformación, el círculo está en el origen
                rect = new RectangleF(
                    -radioCentral,
                    -radioCentral,
                    radioCentral * 2,
                    radioCentral * 2
                );
            }
            
            g.DrawEllipse(pen, rect);
        }

        public void DibujarGema(PictureBox picCanvas, CTransformation transform)
        {
            if (mAltura <= 0)
            {
                MessageBox.Show("Por favor, ingrese un valor válido para la altura de la gema.");
                return;
            }

            // Asegurar que haya un Bitmap persistente en el PictureBox
            if (picCanvas.Image == null || picCanvas.Image.Width != picCanvas.Width || picCanvas.Image.Height != picCanvas.Height)
            {
                picCanvas.Image?.Dispose();
                picCanvas.Image = new Bitmap(Math.Max(1, picCanvas.Width), Math.Max(1, picCanvas.Height));
            }

            using (Graphics g = Graphics.FromImage(picCanvas.Image))
            {
                g.Clear(Color.White);
                g.SmoothingMode = SmoothingMode.AntiAlias;

                // Guardar estado antes de aplicar transformaciones
                GraphicsState state = g.Save();

                if (transform != null)
                {
                    transform.ApplyTransforms(g);
                }

                // Calcular el centro para el círculo
                PointF centro;
                if (transform == null)
                {
                    centro = new PointF(picCanvas.Width / 2, picCanvas.Height / 2);
                }
                else
                {
                    centro = new PointF(0, 0); // En origen cuando hay transformación
                }

                // PASO 1: Calcular y aplicar offset al decágono exterior
                PointF[] decagono = CalcularDecagonoExterior();

                // Aplicar offset si no hay transformación
                if (transform == null)
                {
                    float offsetX = picCanvas.Width / 2;
                    float offsetY = picCanvas.Height / 2;

                    for (int i = 0; i < decagono.Length; i++)
                    {
                        decagono[i].X = SF * decagono[i].X + offsetX;
                        decagono[i].Y = SF * decagono[i].Y + offsetY;
                    }
                }
                else
                {
                    for (int i = 0; i < decagono.Length; i++)
                    {
                        decagono[i].X = SF * decagono[i].X;
                        decagono[i].Y = SF * decagono[i].Y;
                    }
                }

                // PASO 2: Calcular y aplicar offset al decágono interno
                PointF[] decagonoInterno = CalcularDecagonoInterno();

                // Aplicar offset si no hay transformación
                if (transform == null)
                {
                    float offsetX = picCanvas.Width / 2;
                    float offsetY = picCanvas.Height / 2;

                    for (int i = 0; i < decagonoInterno.Length; i++)
                    {
                        decagonoInterno[i].X = SF * decagonoInterno[i].X + offsetX;
                        decagonoInterno[i].Y = SF * decagonoInterno[i].Y + offsetY;
                    }
                }
                else
                {
                    for (int i = 0; i < decagonoInterno.Length; i++)
                    {
                        decagonoInterno[i].X = SF * decagonoInterno[i].X;
                        decagonoInterno[i].Y = SF * decagonoInterno[i].Y;
                    }
                }

                // Dibujar el decágono exterior con línea negra y grosor 2
                mPen = new Pen(Color.Black, 2);
                g.DrawPolygon(mPen, decagono);

                // Dibujar el decágono interno con línea negra y grosor 2
                g.DrawPolygon(mPen, decagonoInterno);

                // PASO 3: Dibujar las líneas de conexión entre los vértices
                DibujarConexionesDecagonos(g, mPen, decagono, decagonoInterno);

                // PASO 4: Dibujar el círculo central
                DibujarCirculoCentral(g, mPen, centro, transform);

                g.Restore(state);
            }
            picCanvas.Refresh();
        }

        public void CloseForm(Form form)
        {
            form.Close();
        }
    }
}
